    <!-- Content specific to the add food page -->
    </nav>
    <h1 class="text-center mt-3">What a delicious food!</h1>
<p class="text-center">Let's add your food and collection points!</p>
<div class="container">
    <nav class="mb-3">
        <a href="/" class="btn btn-primary">Back home</a>
    </nav>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6"> <!-- Adjusted column size for medium and large screens -->
            <div class="card mt-4"> <!-- Adjusted margin top -->
                <div class="card-body">
                    <!-- Upload Food Form -->
                    <form method="POST" action="/food/add">

                        <div class="mb-3">
                            <label for="name" class="form-label">Food</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Onion">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="description" name="description" placeholder="1 kg collection points">
                        </div>

                        <div class="mb-3">
                            <label for="expiry_date" class="form-label">Expiry date</label>
                            <input type="date" class="form-control" id="expiry_date" name="expiry_date" placeholder="2024-01-01" min="2024-01-01">
                        </div>
                        <button type="submit" class="btn btn-primary">Upload food</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
    {{#message}}
        <p>{{message}}</p>
    {{/message}}

    <script>
        // Get today's date
        var today = new Date();

        // Format the date in YYYY-MM-DD
        var formattedDate = today.toISOString().substr(0, 10);

        // Set the value of the date input field to today's date
        document.getElementById("expiry_date").setAttribute("placeholder", formattedDate);
        document.getElementById("expiry_date").setAttribute("min", formattedDate);
    </script>

    <!-- Footer -->
    <footer class="footer">
        <div class="special-container text-center">
            <span class="text-muted">Scottish Charitable Incorporated Organisation SC050443</span>
        </div>
    </footer>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
