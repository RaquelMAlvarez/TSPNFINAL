<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include CSS file for custom styles -->
    <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
        <!-- Logo -->
            <a class="navbar-brand" href="#"><img src="/images/logo.png" alt="Logo"></a>

         <!-- Toggler button for small screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
        </button>

            <!-- Navigation links -->
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                     <a class="nav-link" href="/">Home</a>
                  </li>
                    {{^logged_in}}
                        <li class="nav-item">
                         <a class="nav-link" href="/user/showLogin">Login</a>
                        </li>
                        <li class="nav-item">
                         <a class="nav-link" href="/user/showRegister">Register</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    {{/logged_in}}

                    {{#logged_in}}
                        <li class="nav-item">
                          <a class="nav-link" href="/user/showChangePassword">Change password</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/user/logout">Logout</a>
                        </li>
                    {{/logged_in}}
                    <li class="nav-item">
                        <a class="nav-link" href="/food">Browse food</a>
                    </li>

                    {{#logged_in}}
                        <li class="nav-item">
                          <a class="nav-link" href="/food/showAdd">Add food</a>
                        </li>
                        {{#admin}}
                        <li class="nav-item">
                          <a class="nav-link" href="/user">Users</a>
                        </li>
                        {{/admin}}
                    {{/logged_in}}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content specific to the contact page -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">Contact Us</h1>
        <h3>Questions or feedback? Let's talk.</h3>
        <nav class="mb-3">
            <a href="/" class="btn btn-primary">Back home</a>
            
        </nav>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card"> <!-- Apply card style -->
                    <div class="card-body">
                    <!-- Contact Form -->
                        <form method="POST" action="/contact/sendMessage">
                        <div class="mb-3">
                          <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control"  id="title" name="title" placeholder="Title">
                         </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Message and Contact Details</label>
                            <input type="text" class="form-control"  id="content" name="content" placeholder="Message">
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Message display -->
    {{#message}}
        <p class="text-center">{{message}}</p>
    {{/message}}

  <!-- Footer -->
    <footer class="footer">
        <div class="special-container text-center">
            <span class="text-muted">Scottish Charitable Incorporated Organisation SC050443.</span>
        </div>
    </footer>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

