<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to the Food</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include CSS file for custom styles -->
    <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation bar with the same background color -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#"><img src="/images/logo.png" alt="Logo"></a>
            <!-- Toggler button for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    {{^logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showLogin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showRegister">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    {{/logged_in}}

                    {{#logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showChangePassword">Change password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/logout">Logout</a>
                        </li>
                    {{/logged_in}}
                    <li class="nav-item">
                        <a class="nav-link" href="/food">Browse food</a>
                    </li>
                    {{#logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/food/showAdd">Add food</a>
                        </li>
                        {{#admin}}
                            <li class="nav-item">
                                <a class="nav-link" href="/user">Users</a>
                            </li>
                        {{/admin}}
                    {{/logged_in}}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content specific to the food page -->
    <div class="container mt-4"> <!-- Adjusted margin-top -->
        <h1 class="text-center mb-4">What a delicious food!</h1>
        <p class="text-center">Take a look around and see what food we have in store.</p>
        <nav class="mb-3">
            <a href="/" class="btn btn-primary">Back home</a>
        </nav>

        <!-- Food items displayed as Bootstrap cards -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"> <!-- Adjusted number of columns and spacing -->
            {{#food}}
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text"><small class="text-muted">Expires at: {{expiry_date}}</small></p>
                        <button onclick="claimFood('{{_id}}')" class="btn btn-primary">Claim {{name}}</button>
                    </div>
                </div>
            </div>
            {{/food}}
        </div>
        {{^food}}
        <p class="text-center">No food yet.</p>
        {{/food}}
    </div>

    <!-- JavaScript for claiming food -->
    <script>
        function claimFood(id) {
            fetch('/food/' + id, {
                method: 'DELETE'
            })
            .then(function(response) {
                if (response.ok) {
                    console.log('Food claimed successfully');
                    // Refresh the page
                    window.location.reload();
                } else {
                    console.error('Failed to claim food');
                }
            })
        };
    </script>

   <!-- Footer -->
    <footer class="footer">
        <div class="special-container text-center">
            <span class="text-muted">Scottish Charitable Incorporated Organisation SC050443.</span>
        </div>
    </footer>
    
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


