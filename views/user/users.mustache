<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to the Users</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include CSS file for custom styles -->
    <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation bar with the same background color -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#"><img src="/images/logo.png" alt="Logo"></a>
            <!-- Toggler button for small screens -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation links -->
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    {{^logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showLogin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showRegister">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    {{/logged_in}}
                    
                    {{#logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user/showChangePassword">Change password</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/logout">Logout</a>
                        </li>
                    {{/logged_in}}
                    <li class="nav-item">
                        <a class="nav-link" href="/food">Browse food</a>
                    </li>
                    {{#logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/food/showAdd">Add food</a>
                        </li>
                        {{#admin}}
                            <li class="nav-item">
                                <a class="nav-link" href="/user">Users</a>
                            </li>
                        {{/admin}}
                    {{/logged_in}}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center">What a lovely users!</h1>
        <p class="text-center">Take a look around and see who is sharing food.</p>
        
        <nav class="mb-3">
            <a href="/" class="btn btn-primary">Back home</a>
        </nav>

        <div class="row justify-content-center">
            {{#users}}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">User Record</h4>
                        <p class="card-text">
                            Username: {{username}} 
                        </p>
                        <p class="card-text">
                            Access rights: {{access_rights}} 
                        </p>
                        <p class="card-text">
                            <button onclick="deleteUser('{{username}}')" class="btn btn-danger">Delete {{username}}</button>
                        </p>
                    </div>
                </div>
            </div>
            {{/users}}
        </div>
    </div>

    <script>
        function deleteUser(username) {
            fetch('/user/' + username, {
                method: 'DELETE'
            })
            .then(function(response) {
                if (response.ok) {
                    console.log('User deleted successfully');
                    // Refresh the page
                    window.location.reload();
                } else {
                    console.error('Failed to delete user');
                }
            })
        };
    </script>

    <!-- Footer -->
    <footer class="footer">
        <div class="special-container text-center">
            <span class="text-muted">Scottish Charitable Incorporated Organisation SC050443</span>
        </div>
    </footer>
        
    </footer>
    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

